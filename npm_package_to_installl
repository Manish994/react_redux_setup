VS Code Extensions
# Extensions
code --install-extension esbenp.prettier-vscode # Prettier - Code formatter
code --install-extension dbaeumer.vscode-eslint # ESLint
code --install-extension coenraads.bracket-pair-colorizer-2 # Bracket Pair Colorizer
code --install-extension eamodio.gitlens # GitLens
code --install-extension vscode-icons-team.vscode-icons # vscode-icons
code --install-extension christian-kohler.path-intellisense # Path Intellisense
code --install-extension ritwickdey.live-server # Live Server
code --install-extension yzhang.markdown-all-in-one # Markdown All in One


